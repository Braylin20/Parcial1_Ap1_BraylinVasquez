@page "/Index"
@rendermode InteractiveServer
@inject MetasServices MetasServices


<div class="card card shadow-lg">
    <div class="card-header fw-bold ">
        <h3>Consulta Metas</h3>
    </div>

    <div class="card-body">

        <div class="d-flex justify-content-end align-items-end mb-3">
            <a href="Create" class="btn btn-success">Guardar</a>
        </div>
       <table class="table table-bordered">
           <thead>
               <tr>
                   <th>Metas Id</th>
                   <th>Descripci&oacute;n</th>
                   <th>Fecha</th>
                   <th>Monto</th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
                @foreach(var metas in ListaMetas)
                {
                    <tr>
                        <td>@metas.MetaId</td>
                        <td>@metas.Descripcion</td>
                        <td>@metas.Fecha</td>
                        <td>@metas.Monto</td>
                        <td>
                            <a href="Delete/@metas.MetaId"class="btn btn-danger">Delete</a>
                            <a href="Edit/@metas.MetaId" class="btn btn-primary">Editar</a>
                            <a href="Info/@metas.MetaId" class="btn btn-warning">Informaci&oacute;n</a>
                        </td>
                    </tr>
                }
            </tbody>
       </table>
    </div>
</div>



@code {
    public List<Metas> ListaMetas = new List<Metas>();
    public Metas Metas { get; set; } = new Metas();
    public string Mensaje = string.Empty;


    protected override async Task OnInitializedAsync() => ListaMetas = await MetasServices.Listar(m => true);

    public void Nuevo()
    {
        Metas = new Metas();
    }
}
